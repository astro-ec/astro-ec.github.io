---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro'
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'OEAA - Astronomía EC',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: '¡Inscríbete!',
        href: '#services',
        target: '_blank',
      },
      { text: 'Conoce más', href: '#features' },
    ]}
    image={{ src: '~/assets/images/galaxy1.png', alt: 'Galaxy' }}
  >
    <Fragment slot="title">
      <div class="flex flex-col space-y-1">
        <span class="block sm:inline"> Olimpiadas Ecuatorianas</span>
        <span class="text-accent dark:text-white highlight"> de Astronomía y Astrofísica</span>
      </div>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Aprende sobre el Universo y participa en competencias internacionales</span
      >
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="La Olimpiada Nacional"
    title="Empieza tu viaje desde el Ecuador"
    subtitle="¡Aprende sobre astronomía y astrofísica de la mano de expertos!"
    items={[
      {
        title: 'El mejor material para aprender astrofísica',
        description:
          'A seamless integration between two great frameworks that offer high productivity, performance and versatility.',
        icon: 'tabler:book',
      },
      {
        title: 'Clases online en vivo',
        description:
          'Widgets made with Tailwind CSS ready to be used in Marketing Websites, SaaS, Blogs, Personal Profiles, Small Business...',
        icon: 'tabler:chalkboard',
      },
      {
        title: 'Los mejores instructores',
        description:
          'Creating secure, efficient, and user-friendly websites that deliver exceptional experiences and lasting value.',
        icon: 'tabler:school',
      },
      {
        title: 'Proyección mundial',
        description:
          'Having a good page speed impacts organic search ranking, improves user experience (UI/UX) and increase conversion rates.',
        icon: 'tabler:world-star',
      },
    ]}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="Calendario 2025"
    items={[
      {
        title: 'Marzo',
        description:
          "Examen Nacional de Selección 2025. Participan los candidatos a la Delegación Ecuatoriana.",
        icon: 'tabler:number-1-small',
      },
      {
        title: 'Mayo',
        description:
          "Prueba Final de Selección de la 8va Olimpiada Nacional de Astronomía 2025. Participan los estudiantes que hayan clasificado a esta etapa.",
        icon: 'tabler:number-2-small',
      },
      {
        title: 'Julio/Agosto',
        description:
          "Inicio de la 9na Olimpiada Nacional de Astronomía 2026. Pueden inscribirse todos los estudiantes que cumplan los requisitos de participación.",
        icon: 'tabler:number-3-small',
      },
      {
        title: 'Agosto</span>',
        description:
          "18th International Olympiad on Astronomy and Astrophysics India 2025. Participan los mejores 5 estudiantes del Examen Nacional de Selección.",
        icon: 'tabler:number-4-small',
      },
      {
        title: 'Septiember-Noviembre</span>',
        description:
          'XVII Olimpiada Latinoamericana de Astronomía y Astronáutica 2025. Participan los ganadores de la 8va Olimpiada Nacional de Astronomía 2025.',
        icon: 'tabler:number-5-small',
      },
    ]}
    image={{
      src: '~/assets/images/nebula-8753350_1920.jpg',
      alt: 'Nebula',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Preguntas frecuentes"
    subtitle="¡Respondemos las dudas más comúnes!"
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: '¿Cuándo empieza la Olimpiada Nacional?',
        description:
          "Cada edición de la Olimpiada Nacional empieza en julio/agosto, informamos al público con un anuncio en redes sociales.",
      },
      {
        title: '¿Cuáles son los requisitos para participar?',
        description:
          'Debes tener menos de 18 años, ser estudiante de nivel secundario, ser ecuatoriano o extranjero residente.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Más información',
        href: 'https://astro-ec.github.io/services/',
        target: '_blank',
      },
    ]}
  >
    <Fragment slot="title">
      <br class="block sm:hidden" /><span class="sm:whitespace-nowrap">Únete al Comité Organizador</span>
    </Fragment>

    <Fragment slot="subtitle">
      ¿Te interesa apoyar a la siguiente generación de científicos del Ecuador?
      Participa organizando la Olimpiada Nacional de Astronomía
    </Fragment>
  </CallToAction>
</Layout>
